<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/spacing_medium"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:id="@+id/layout_item_switch">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="5dp"
        app:contentPadding="@dimen/spacing_medium"
        app:cardElevation="5dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/image_ll"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginEnd="@dimen/spacing_medium"
                    android:padding="@dimen/spacing_small"
                    android:background="@drawable/white_bordered_bg"
                    android:id="@+id/img_poster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <RelativeLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@color/colorPrimary"
                    tools:text="Name"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/genre_tv"
                    android:layout_below="@+id/name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@android:color/black"
                    tools:text="Genre"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/author_tv"
                    android:layout_below="@+id/genre_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@android:color/black"
                    tools:text="Author"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/publisher_tv"
                    android:layout_below="@+id/author_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@android:color/black"
                    tools:text="Publisher"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/date_published_tv"
                    android:layout_below="@+id/publisher_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@android:color/black"
                    tools:text="Date Published"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/stok_tv"
                    android:layout_below="@+id/date_published_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@android:color/holo_green_light"
                    tools:text="Stok"/>
                <androidx.appcompat.widget.AppCompatTextView
                    app:autoSizeTextType="uniform"
                    android:layout_below="@+id/stok_tv"
                    android:id="@+id/description_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_xsmall"
                    android:textColor="@android:color/holo_red_dark"
                    tools:text="Description"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description_tv">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_toStartOf="@+id/order_ll"
                        android:gravity="start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:id="@+id/view_bt"
                            android:layout_width="@dimen/_30ssp"
                            android:layout_height="@dimen/_18ssp"
                            android:background="@drawable/button_chocolate_r5"
                            android:textAllCaps="false"
                            android:textSize="@dimen/text_xsmall"
                            android:textColor="@color/white"
                            android:text="@string/view" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/order_ll"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:id="@+id/return_bt"
                            android:layout_width="@dimen/_40ssp"
                            android:layout_height="@dimen/_18ssp"
                            android:background="@drawable/button_chocolate_r5"
                            android:textAllCaps="false"
                            android:textSize="@dimen/text_xsmall"
                            android:textColor="@color/white"
                            android:text="@string/retun" />
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:id="@+id/borrow_bt"
                            android:layout_width="@dimen/_40ssp"
                            android:layout_height="@dimen/_18ssp"
                            android:background="@drawable/button_chocolate_r5"
                            android:textAllCaps="false"
                            android:textSize="@dimen/text_xsmall"
                            android:textColor="@color/white"
                            android:text="@string/borrow" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</RelativeLayout>